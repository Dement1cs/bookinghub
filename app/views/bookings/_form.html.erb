<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div class="alert alert-danger">
      <div class="fw-bold mb-2">
        <%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:
      </div>
      <ul class="mb-0">
        <% booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :room_id, "Room", class: "form-label" %>
    <%= form.collection_select :room_id, Room.all, :id, :name,
                               { prompt: "Select a room" },
                               { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :starts_at, class: "form-label" %>
    <%= form.datetime_field :starts_at, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :ends_at, class: "form-label" %>
    <%= form.datetime_field :ends_at, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :note, class: "form-label" %>
    <%= form.text_field :note, class: "form-control", placeholder: "Optional note" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back", bookings_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
