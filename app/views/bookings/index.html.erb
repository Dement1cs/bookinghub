<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Bookings</h1>
  <%= link_to "New booking", new_booking_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead>
        <tr>
          <th>Room</th>
          <th>Starts</th>
          <th>Ends</th>
          <th>User</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td class="fw-semibold"><%= booking.room&.name || booking.room_id %></td>
            <td><%= booking.starts_at&.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= booking.ends_at&.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= booking.user&.email || booking.user_id %></td>
            <td class="text-end">
              <%= link_to "Show", booking_path(booking), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Delete",
                          booking_path(booking),
                          class: "btn btn-sm btn-outline-danger",
                          data: { turbo_method: :delete, turbo_confirm: "Delete this booking?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
