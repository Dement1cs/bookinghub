<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div class="alert alert-danger">
      <div class="fw-bold mb-2">
        <%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:
      </div>
      <ul class="mb-0">
        <% room.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "e.g. Conference Room A" %>
  </div>

  <div class="mb-3">
    <%= form.label :capacity, class: "form-label" %>
    <%= form.number_field :capacity, class: "form-control", min: 1 %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back", rooms_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
