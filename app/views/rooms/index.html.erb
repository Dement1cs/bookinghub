<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Rooms</h1>
  <%= link_to "New room", new_room_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Capacity</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td class="fw-semibold"><%= room.name %></td>
            <td><%= room.capacity %></td>
            <td class="text-end">
              <%= link_to "Show", room_path(room), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Edit", edit_room_path(room), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Delete",
                          room_path(room),
                          class: "btn btn-sm btn-outline-danger",
                          data: { turbo_method: :delete, turbo_confirm: "Delete this room?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
